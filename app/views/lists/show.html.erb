<h1><%= current_user.list.title %></b></h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Description</th>
      <th>Days Remaining</th>
      <th>Complete</th>
    </tr>
  </thead>
  <tbody>
    <% current_user.list.items.each do |item| %>
      <tr>
        <td>
          <%= item.content %><br/>
        </td>
        <td>   
          <%= item.days_left %><br/>
        </td>
        <td>
          <%= link_to(item, method: :delete) do %>
            <input type="checkbox"><br/>
          <% end %>
        </td>
      </tr>
    <% end %>
    <tr>
      <td>
        <%= link_to "Add item", new_item_path, class: 'btn btn-primary' %>
        <%= link_to "Update list", new_item_path, class: 'btn btn-primary' %>
      </td>
      <td></td>
      <td></td>
    </tr>
  </tbody>
</table>